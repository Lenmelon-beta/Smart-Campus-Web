@model CustomAuth.Models.LoginVeiwModel

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UsernameOrEmail" class="control-label"></label>
                <input asp-for="UsernameOrEmail" class="form-control" />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    Don't have an account?<a asp-action="Registration">Back to Registration</a>
</div>

<div class="row">
    <div class="col-md-4">
        <h4>Or Login with:</h4>
        <div>
            <i class="bi bi-google"><a asp-action="ExternalLogin" style="color:blue;" class="btn btn-secondary">Google</a></i>
            <a asp-action="MicrosoftLogin" class="btn btn-secondary">Microsoft</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
